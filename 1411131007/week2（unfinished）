#include <stdio.h>

struct student{
    char firstname[20];
    char lastname[20];
    unsigned int age;
    int math;
    int computer;
    double average;
};

struct student stu;

int main(void){
　　scanf("%s", stu.lastname);
　　scanf("%s", stu.firstname);
　　scanf("%d", &stu.age);
　　scanf("%d", &stu.math);
　　scanf("%d", &stu.computer);
		
    printf("average : %.2lf", stu.average = (stu.math + stu.computer) / 2);
} 
